<div class="signup-page">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="signup-form-section">
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "input-field" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", class: "input-field", placeholder: "Password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "signup-button" %>
  </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>